<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.launch.signup.LaunchSignup_15Photo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingHorizontal="47dp"
                android:text="프로필 사진 등록"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLightGray200" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:weightSum="3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <com.unilab.uniting.square.SquareImageView
                    android:id="@+id/signup_photo15_iv_photo0_plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_plus_gray" />

                <com.unilab.uniting.square.SquareImageView
                    android:id="@+id/signup_photo15_iv_photo0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_image_upload"
                    android:scaleType="fitCenter" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo1_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_plus_gray" />

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_upload"
                        android:scaleType="fitCenter" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo2_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_plus_gray" />

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_upload"
                        android:scaleType="fitCenter" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:weightSum="3"

                >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo3_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_plus_gray" />

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_upload"
                        android:scaleType="fitCenter" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo4_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_plus_gray" />

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_upload"
                        android:scaleType="fitCenter" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo5_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_plus_gray" />

                    <com.unilab.uniting.square.SquareImageView
                        android:id="@+id/signup_photo15_iv_photo5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_upload"
                        android:scaleType="fitCenter" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="32dp"
                android:text="얼굴 정면이 잘 보이는 사진으로 최소 2장 이상 올려주세요."
                android:textColor="@color/colorGray130"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/signup_photo15_tv_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="프로필 사진 가이드 보기"
                android:textColor="@color/colorMainPink"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLightGray200" />

            <Button
                android:id="@+id/signup_photo15_btn_ok"
                android:layout_width="285dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_pink_button2"
                android:text="프로필 작성 완료"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>