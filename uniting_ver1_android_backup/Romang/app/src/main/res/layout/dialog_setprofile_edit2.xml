<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_button"
    android:gravity="center_horizontal"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/dialog_setprofile_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="닉네임"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGray160"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

                <EditText
                    android:id="@+id/dialog_setprofile_et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="닉네임을 입력해주세요."
                    android:textSize="15dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/dialog_setprofile_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/bg_pink_button2"
            android:text="완료"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="32dp"/>


</LinearLayout>