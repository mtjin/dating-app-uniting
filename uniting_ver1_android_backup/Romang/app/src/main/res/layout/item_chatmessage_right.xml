<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_chatmessage_right_tv_lastday"
        android:layout_width="match_parent"
        android:text="1일전"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/colorGray130"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_chatmessage_right_tv_message"
        android:padding="12dp"
        android:background="@drawable/bg_chatmessage_pink_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="            "
        android:textSize="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/item_chatmessage_right_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="         "
        android:textColor="@color/colorGray" />



</LinearLayout>