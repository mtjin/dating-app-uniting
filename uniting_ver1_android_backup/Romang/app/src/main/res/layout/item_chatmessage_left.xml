<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_chatmessage_left_tv_lastday"
        android:layout_width="match_parent"
        android:text="1일전"
        android:gravity="center"
        android:textColor="@color/colorGray130"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_chatmessage_left_civ_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/image_empty_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chatmessage_left_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chatmessage_gray_left"
                android:padding="12dp"
                android:paddingLeft="24dp"
                android:paddingTop="12dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp"
                android:text="                "
                android:textSize="16dp" />

            <TextView
                android:id="@+id/item_chatmessage_left_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="           "
                android:textColor="@color/colorGray" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>