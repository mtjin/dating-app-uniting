<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_custom"
    android:gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">


        <TextView
            android:id="@+id/item_more_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="신고하기"
            android:textStyle="bold"
            android:background="@drawable/textview_dialog_background_click"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <View
            android:id="@+id/dialog_more_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGray160"/>

        <TextView
            android:id="@+id/item_more_block"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:text="차단하기"
            android:background="@drawable/textview_dialog_background_click"
            android:paddingVertical = "12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGray160"/>

        <TextView
            android:id="@+id/item_more_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/textview_dialog_background_click"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>


</LinearLayout>