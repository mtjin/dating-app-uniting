<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.MainActivity">

    <include
        android:id="@+id/home_include"
        layout="@layout/home_main_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.unilab.uniting.activities.CustomViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            layout="@layout/view_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGray200"/>

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar0_home" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 소개"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar1_people" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미팅·번개"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar2_star" />

            <TextView
                android:id="@+id/home_main_tv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="추천"
                android:textColor="@color/colorGray130"
                android:textSize="8dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_experiment" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실험실"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar4_chat" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매칭"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>