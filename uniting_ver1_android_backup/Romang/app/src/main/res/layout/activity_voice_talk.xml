<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".activities.chatting.VoiceTalkActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/voice_talk_iv_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:src="@drawable/image_empty_profile" />

    <TextView
        android:id="@+id/voice_talk_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="닉네임"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/voice_talk_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="보이스톡 해요"
        android:textColor="@color/colorGray"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/voice_talk_linear_mute"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:background="@color/colorWhite">

                        <ImageView
                            android:id="@+id/voice_talk_iv_mute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mute"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorGray"
                        android:text="음소거"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/voice_talk_linear_speaker"
                        android:layout_width="72dp"
                        android:layout_height="70dp"
                        android:background="@color/colorWhite"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/voice_talk_iv_speaker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_audio" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorGray"
                        android:text="스피커"/>

                </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/voice_talk_linear_no"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:background="@drawable/bg_call_red">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_hang_up"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/voice_talk_linear_ok"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:layout_marginStart="80dp"
            android:background="@drawable/bg_call_green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>