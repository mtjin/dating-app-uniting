<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite"
        app:contentInsetStart="0dp">


        <LinearLayout
            android:id="@+id/home_main_toolbar_li_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_main_toolbar_civ_profile"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_back_black" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/home_main_toolbar_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_title"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:visibility="gone"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/home_main_toolbar_iv_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/uniting_title"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_main_toolbar_iv_heartbell"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="right|center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="21dp"
                app:srcCompat="@drawable/ic_diamond" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_main_toolbar_linear_ringbell"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_gravity="right|center">

            <ImageView
                android:id="@+id/home_main_toolbar_iv_ringbell"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_bell_none" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/preview_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>


    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGray200"/>

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar0_home" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 소개"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar1_people" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미팅·번개"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar2_star" />

            <TextView
                android:id="@+id/home_main_tv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="추천"
                android:textColor="@color/colorGray130"
                android:textSize="8dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_experiment" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실험실"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="8dp"
                android:id="@+id/home_main_ibtn_tab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_bar4_chat" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/home_main_tv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매칭"
                android:textColor="@color/colorGray130"
                android:textStyle="bold"
                android:textSize="8dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>