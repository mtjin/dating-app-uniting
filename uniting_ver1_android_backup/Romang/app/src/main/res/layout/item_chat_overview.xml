<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/item_chatoverview_li_linear"
    android:background="@drawable/linear_layout_gray_click"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGray200"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_chatoverview_civ_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left|center"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chatoverview_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_chatoverview_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text=""
                android:maxLines="1"
                android:textColor="@color/colorGray" />
        </LinearLayout>

        <LinearLayout
            android:gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chatoverview_tv_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="대화를 시작하세요!"
                android:textColor="@color/colorMainPink" />

            <TextView
                android:id="@+id/item_chatoverview_tv_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:text="2019-07-25"
                android:textColor="@color/colorGray"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>