<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_dialog_custom"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/dialog_edit_photo_takePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="카메라로 사진 찍기"
                    android:textStyle="bold"
                    android:background="@drawable/textview_dialog_background_click"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:id="@+id/dialog_edit_photo_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGray160"/>

                <TextView
                    android:id="@+id/dialog_edit_photo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="갤러리에서 사진 가져오기"
                    android:textStyle="bold"
                    android:background="@drawable/textview_dialog_background_click"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:id="@+id/dialog_edit_photo_line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGray160"/>

                <TextView
                    android:id="@+id/dialog_edit_photo_delete"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@drawable/textview_dialog_background_click"
                    android:text="사진 삭제"
                    android:paddingVertical = "12dp"/>

                <View
                    android:id="@+id/dialog_edit_photo_line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGray160"/>

                <TextView
                    android:id="@+id/dialog_edit_photo_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/textview_dialog_background_click"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>


        </LinearLayout>

        <include
            layout="@layout/view_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

</FrameLayout>